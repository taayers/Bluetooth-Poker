<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.triadicsoftware.bluetoothpoker.StartGameActivity">

    <TextView
        android:id="@+id/appNameBanner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:text="B438 Bluetooth Poker"
        android:textSize="30sp"
        android:textColor="#3079ab"
        android:gravity="center"/>

    <Button
        android:id="@+id/joinGameBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/appNameBanner"
        android:layout_centerHorizontal="true"
        android:text="Join Game"
        android:onClick="joinGame"/>

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/joinGameBtn"
        android:layout_centerHorizontal="true"
        android:text="Start Game"
        android:onClick="createGame"/>



    <ImageView
        android:id="@+id/handOfCardsImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/startGameBtn"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hand_of_cards"/>

</RelativeLayout>
